# =============================================================================
# Variables de Entorno para Docker Compose - AI Docs
# =============================================================================
# Copia este archivo como .env en el mismo directorio que docker-compose.yml

# -----------------------------------------------------------------------------
# PostgreSQL
# -----------------------------------------------------------------------------
POSTGRES_USER=aidocs
POSTGRES_PASSWORD=aidocs_secret_change_me
POSTGRES_DB=ai_docs
DB_PORT=5432

# -----------------------------------------------------------------------------
# Aplicación
# -----------------------------------------------------------------------------
APP_PORT=4321

# URL base de la aplicación (cambia en producción)
BETTER_AUTH_URL=http://localhost:4321

# Secret para autenticación - ¡CAMBIA ESTO EN PRODUCCIÓN!
# Genera uno con: openssl rand -base64 32
BETTER_AUTH_SECRET=cambia-este-secret-super-seguro-en-produccion

# Orígenes confiables para acceso desde red local (separados por comas)
# Ejemplo: http://192.168.1.100:4321,http://10.11.15.80:4321
TRUSTED_ORIGINS=
